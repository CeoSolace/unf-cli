{
  "compilerOptions": {
    // Target a modern version of JavaScript for both Node and browser runtimes
    "target": "ES2021",
    // Use CommonJS for Node modules; Next.js will handle its own transpilation
    "module": "CommonJS",
    // Output directory for compiled files (only used for backend and scripts)
    "outDir": "dist",
    // Base directory for sources
    "rootDir": "./",
    // Enable interoperability between CommonJS and ES modules
    "esModuleInterop": true,
    // Enable all strict typeâ€‘checking options
    "strict": true,
    // Resolve modules using Node resolution algorithm
    "moduleResolution": "Node",
    // Allow default imports from modules without a default export
    "allowSyntheticDefaultImports": true,
    // Support JSX in .tsx files for React/Next.js
    "jsx": "react-jsx",
    // Preserve JSX for Next.js to handle
    "jsxImportSource": "react",
    // Include source maps for better debugging
    "sourceMap": true,
    // Skip library type checking to speed up builds
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "core/**/*",
    "admin/**/*",
    "scripts/**/*",
    "tests/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}